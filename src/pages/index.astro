---
const fallbackLocalePath = "/es";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="refresh" content={`0;url=${fallbackLocalePath}`} />
    <script is:inline>
      (() => {
        const browserLang = (navigator.language || "es").toLowerCase();
        const preferredLocale = browserLang.startsWith("en") ? "en" : "es";
        window.location.replace(`/${preferredLocale}`);
      })();
    </script>
    <title>Redirecting...</title>
  </head>
  <body>
    <a href={fallbackLocalePath}>Go to {fallbackLocalePath}</a>
  </body>
</html>
