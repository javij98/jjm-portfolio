---
import "../styles/global.css";
import LanguagePicker from "../components/LanguagePicker.astro";
import CommandMenu from "../components/CommandMenu";
import type { Locale, UiLabels } from "../i18n/ui";

export interface Props {
  title?: string;
  description?: string;
  lang: Locale;
  labels: UiLabels;
  currentPath: string;
  email: string;
  linkedin: string;
  githubHref?: string;
}

const {
  title = "Javier Jiménez Molina | DevOps & Platform Engineer",
  description =
    "Ingeniero DevOps con +4 años de experiencia y background sólido en desarrollo (Java/React). Especializado en reducir el Time-to-Market mediante pipelines de CI/CD avanzados y orquestación eficiente con Kubernetes.",
  lang,
  labels,
  currentPath,
  email,
  linkedin,
  githubHref = "https://github.com/javij98",
}: Props = Astro.props;

const navLinks = [
  { label: labels.nav.home, href: "#hero" },
  { label: labels.nav.metrics, href: "#metrics" },
  { label: labels.nav.experience, href: "#experience" },
  { label: labels.nav.skills, href: "#skills" },
  { label: labels.nav.contact, href: "#contact" },
];

const servicesBase = (import.meta.env.PUBLIC_SERVICES_URL ?? "https://services-site-ten.vercel.app")
  .trim()
  .replace(/\/$/, "");
const servicesHref = `${servicesBase}/${lang}`;
const servicesLabel = lang === "es" ? "Servicios" : "Services";
---

<!doctype html>
<html lang={lang} data-theme="dark" style="color-scheme: dark;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark" />
    <meta name="supported-color-schemes" content="dark" />
    <meta name="description" content={description} />
    <meta name="author" content="Javier Jiménez Molina" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={labels.meta.ogLocale} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen flex flex-col" style="color-scheme: dark;">
    <nav
      id="sticky-recruiter-nav"
      class="fixed inset-x-0 top-0 z-50 border-b border-white/10 bg-slate-950/65 shadow-lg shadow-black/20 backdrop-blur-xl supports-[backdrop-filter]:bg-slate-950/45"
    >
      <div
        class="mx-auto flex max-w-6xl items-center justify-between gap-3 px-4 py-3 sm:px-6"
      >
        <a href="#hero" class="group flex shrink-0 items-center gap-3">
          <div
            class="flex h-8 w-8 items-center justify-center rounded-md border border-operational-500/30 bg-operational-500/10"
          >
            <span class="font-mono text-sm font-bold text-operational-400"
              >&gt;_</span
            >
          </div>
          <span class="hidden font-mono text-sm font-medium text-slate-300 transition-colors group-hover:text-white sm:inline">
            Javier Jiménez Molina
          </span>
        </a>

        <div class="hidden items-center gap-1 lg:flex">
          {
            navLinks.map((link) => (
              <a
                href={link.href}
                class="rounded-md px-3 py-2 font-mono text-xs text-slate-400 transition-all hover:bg-white/5 hover:text-white"
              >
                {link.label}
              </a>
            ))
          }
          <a
            href={servicesHref}
            target="_blank"
            rel="noopener noreferrer"
            class="ml-2 inline-flex items-center gap-1 rounded-md border border-operational-500/45 bg-operational-500/12 px-3 py-2 font-mono text-xs font-semibold text-operational-300 transition-all hover:border-operational-300/80 hover:bg-operational-500/24 hover:text-operational-100"
          >
            {servicesLabel}
            <span aria-hidden="true">↗</span>
          </a>
        </div>

        <div class="flex items-center gap-3">
          <CommandMenu
            client:load
            lang={lang}
            currentPath={currentPath}
            email={email}
            linkedin={linkedin}
            githubHref={githubHref}
          />
          <LanguagePicker currentLang={lang} pathname={currentPath} labels={labels.language} />

          <div class="hidden items-center gap-2 sm:flex">
            <div class="h-2 w-2 animate-pulse rounded-full bg-operational-400 shadow-[0_0_6px] shadow-operational-400/50">
            </div>
            <span class="font-mono text-xs text-operational-400">{labels.nav.online}</span>
          </div>
        </div>
      </div>
    </nav>

    <main class="flex-1 pt-20">
      <slot />
    </main>

    <footer class="border-t border-white/10 bg-slate-950/80 backdrop-blur-sm">
      <div
        class="mx-auto flex max-w-6xl flex-wrap items-center justify-between gap-4 px-6 py-3"
      >
        <div class="flex items-center gap-6">
          <div class="flex items-center gap-2">
            <div class="h-1.5 w-1.5 rounded-full bg-operational-400"></div>
            <span class="font-mono text-[11px] text-slate-500"
              >{labels.footer.status}: <span class="text-operational-400">{labels.footer.online}</span></span
            >
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="h-3 w-3 text-slate-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M6 3v12M18 9a3 3 0 1 0 0 6M6 15a3 3 0 1 0 0-6m12 6V3"
              ></path>
            </svg>
            <span class="font-mono text-[11px] text-slate-500"
              >{labels.footer.branch}: <span class="text-slate-400">{labels.footer.branchValue}</span></span
            >
          </div>
          <div class="hidden items-center gap-2 sm:flex">
            <svg
              class="h-3 w-3 text-slate-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
            <span class="font-mono text-[11px] text-slate-500"
              >{labels.footer.region}: <span class="text-slate-400">{labels.footer.regionValue}</span></span
            >
          </div>
        </div>

        <span class="font-mono text-[11px] text-slate-600">
          © {new Date().getFullYear()} Javier Jiménez Molina
        </span>
      </div>
    </footer>

  </body>
</html>
